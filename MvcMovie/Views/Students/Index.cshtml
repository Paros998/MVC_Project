@model MvcMovie.Models.StudentsFilterModel
@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Students" asp-action="Index">
    <div class="filter-div">
            Lowest Age : <input class="form-input" type="number" name="AgeRangeX">
            Highest Age : <input class="form-input" type="number" name="AgeRangeY">
            University : <input class="form-input" type="text" name="UniversityString">
        <input class="submitter" type="submit" value="Filter Students">
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].StudentSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].University)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Students)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>